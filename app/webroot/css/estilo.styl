.indexDirector {
  background: url('images/Hexagon-3.jpg') center / cover;
}
.demo-layout-transparent .mdl-layout__header,
.demo-layout-transparent .mdl-layout__drawer-button {

  color: white;
  }
  
  div.mdl-layout__drawer
  	width 180px
  	
main
 	figure.logo
 		width 67%
 		display block
 		margin 0 auto
 		img
 			width 100%
 	figure.fotoUser
 		width 150px
 		height 150px
 		display block
 		margin 15px auto
 		img
 			width 100%
 			height 150px
 			border-radius 50%
 			border 3px solid blanco
 	h2
 		color blanco
 		font-size 23px
 		text-align center
 		margin 5px auto
 		font-weight bold
 		text-shadow 2px 3px 1px azulObscuro
 		


/* ----------------- index coordinadores --------*/

main.coordinadores
	margin-top 40px
	h2
		text-shadow none 
	article
		position relative
		padding 1% 0 1% 0
		&:nth-child(2)
			background blanco
			img
				border 3px solid azulObscuro
			h2
				color azulObscuro
	button
		color naranja
		margin-left 90%
		
	ul
		position absolute
		background blanco
		margin 1px 0 0 0
		width 100px
		padding 1%
		border-radius 7px
		top 25px;
		right 10px;
		display none
		li
			width 85%
			padding 2%
			list-style none 
			display block
			a
				text-decoration none
				color azulObscuro
				display block
				text-align left
	h2
		font-size 18px
		text-align center
		display block
		margin 5px auto
		color blanco
		line-height 25px
	figure
		width 100px
		height 100px
		display block
		margin 5px auto 25px auto
		
		img
			width 100%
			height 100px
			border-radius 50%
			border 3px solid blanco
			

/*-----------------------ver carreras------------*/
main.verCarreras
	h2
		margin 0
	h3
		color blanco
		margin 5px auto
		text-align center
		font-size 20px
	table
		width 100%
		td
			text-align left 
			padding 12px 3px 0 0 !important
			font-size size
		a
			text-decoration none
			color blanco
			background rojo
			padding 3%
			border-radius 5px 
			


/*---------------maestros-----------------*/
main.maestros
	h3
		text-align center
		margin 5px auto
		color blanco
		font-size 22px
	article
		border-bottom 3px solid blanco
		div.datosPersonales
			width 69%
			display inline-block
			text-align left
			h2
				font-size 18px
				line-height 24px
			h3
				font-size 16px
		div.materiasImpartidas
			display none
			p
				color blanco
				font-size 16px
				margin 0 0 0 0
				padding 1%
			
		figure
			width 80px
			height 80px
			display inline-block
			margin 10px 0
			padding-left 1.5%
			vertical-align top 
			img
				width 100%
				border-radius 50%
				border 3px solid white


/*-----------verAsistencias----------*/

main.verAsistencias
	h3
		color blanco
		margin 5px auto
		text-align center
		font-size 22px
	select
		width 80%
		display block
		margin 10px auto
		border none
		border-bottom 3px solid blanco 
		border-radius 5px 
		background verde
		padding 1.5%
		color blanco
		font-weight bold 
	label
		width 85%
		display block
		margin 20px auto
		text-align center
		color blanco
	input[type=text]
		border none
		background azulClaro
		color blanco
		padding 2%
		width 80%
		margin 10px auto
		display block
		font-weight 
		border-radius 5px
		border-bottom 3px solid esmeralda
	button
		border none
		width 70%
		display block
		margin 20px auto
		padding 2%
		background naranja 
		color blanco
		font-weight bold
		border-bottom 3px solid blanco
		
		
			

